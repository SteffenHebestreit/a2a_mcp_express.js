{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "",
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"], // Which files to include in compilation
  "exclude": ["node_modules", "**/*.spec.ts"] // Which files/folders to exclude
}
